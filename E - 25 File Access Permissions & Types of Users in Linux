#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat s;

    stat("sample.txt", &s);

    printf("User Permissions:\n");
    printf("Read: %s\n", (s.st_mode & S_IRUSR) ? "Yes" : "No");
    printf("Write: %s\n", (s.st_mode & S_IWUSR) ? "Yes" : "No");
    printf("Execute: %s\n", (s.st_mode & S_IXUSR) ? "Yes" : "No");

    printf("\nGroup Permissions:\n");
    printf("Read: %s\n", (s.st_mode & S_IRGRP) ? "Yes" : "No");
    printf("Write: %s\n", (s.st_mode & S_IWGRP) ? "Yes" : "No");
    printf("Execute: %s\n", (s.st_mode & S_IXGRP) ? "Yes" : "No");

    printf("\nOthers Permissions:\n");
    printf("Read: %s\n", (s.st_mode & S_IROTH) ? "Yes" : "No");
    printf("Write: %s\n", (s.st_mode & S_IWOTH) ? "Yes" : "No");
    printf("Execute: %s\n", (s.st_mode & S_IXOTH) ? "Yes" : "No");

    return 0;
}
