#include <stdio.h>

int main() {
    int n, tq, i, time = 0, remain;
    int bt[10], rt[10];

    printf("Enter number of processes: ");
    scanf("%d", &n);

    remain = n;

    printf("Enter burst times:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    while(remain != 0) {
        for(i = 0; i < n; i++) {
            if(rt[i] > 0) {
                if(rt[i] > tq) {
                    time += tq;
                    rt[i] -= tq;
                } else {
                    time += rt[i];
                    rt[i] = 0;
                    remain--;
                    printf("Process %d completed at time %d\n", i+1, time);
                }
            }
        }
    }
    return 0;
}

output :
Enter number of processes: 3
Enter burst times:
10
5
8
Enter time quantum: 4
Process 2 completed at time 17
Process 3 completed at time 21
Process 1 completed at time 23
