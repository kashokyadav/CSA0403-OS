#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[50];

    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);

    write(fd, "UNIX File Management", 20);

    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, 20);

    buffer[20] = '\0';
    printf("Data read from file: %s\n", buffer);

    close(fd);
    return 0;
}
