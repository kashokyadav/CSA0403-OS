// exp 1 :
#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid;

    pid = fork();   // create child process

    if (pid == 0) {
        // Child process
        printf("Child Process:\n");
        printf("PID  = %d\n", getpid());
        printf("PPID = %d\n", getppid());
    }
    else if (pid > 0) {
        // Parent process
        printf("Parent Process:\n");
        printf("PID  = %d\n", getpid());
        printf("PPID = %d\n", getppid());
    }
    else {
        // fork failed
        printf("Fork failed\n");
    }

    return 0;
}


output :
Parent Process:
PID  = 29032
PPID = 29025
Child Process:
PID  = 29033
PPID = 29032
